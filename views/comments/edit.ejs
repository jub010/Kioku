<% include ../partials/header %>
<div class="row justify-content-center">
	<div class="col-md-12 text-center">
        <h1>Edit Comment</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/attractions/<%= attraction_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control" rows=10 type="text" name="comment[text]"><%= comment.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
		<a href="/attractions/<%= attraction_id %>">Go Back</a>
	</div>
</div>
<% include ../partials/footer %>