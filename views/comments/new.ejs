<% include ../partials/header %>
<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Add New Comment to <%= attraction.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/attractions/<%= attraction._id %>/comments" method="POST">
			<div class="form-group">
				<textarea class="form-control" type="text" rows=10 name="comment[text]" placeholder="text"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
		<a href="/attractions/<%= attraction._id %>">Go Back</a>
	</div>
</div>
<% include ../partials/footer %>