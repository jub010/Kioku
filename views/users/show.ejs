<% include ../partials/header %>

<div class="row">
	<div class="col-md-4 my-3">
		<div class="card p-4">
			<div class="card-body">
				<img src="<%= user.avatar %>" alt="user profile image" class="avatar shadow-lg">
				<h3 class="card-title my-3"><%= user.firstName + " " + user.lastName %></h3>
				<div class="text-right">
					<a class="btn btn-md btn-primary" href="mailto:<%= user.email %>"><i class="fas fa-envelope"></i> Send email</a>
				</div>
			</div>
			<div class="card-body">
				<p class="card-text"><%= user.description %></p>
			</div>
		</div>
	</div>
	<div class="col-md-8 my-3">
		<div class="card p-4">
			<h3 class="card-title mb-3"><%= user.username %>'s memories:</h3>
			<div class="row text-center" id="attraction-grid">
				<% attractions.forEach(function(attraction) { %>
					<div class="col-lg-6 mb-4">
	            		<div class="card">
	                		<img class="card-img-top" src="<%= attraction.image %>" alt="<%= attraction.name %>">
	                		<div class="card-body">
	                    		<h5 class="card-title"><%= attraction.name %></h5>
	                    		<% if (attraction.rating === 0) { %>
	                        		<em>No reviews yet.</em>
	                        	<% } else { %>
			                        <span class="fa fa-star checked"></span>
			                        <span class="fa fa-star <% if (attraction.rating > 1.5) { %> checked <% } %>"></span>
			                        <span class="fa fa-star <% if (attraction.rating > 2.5) { %> checked <% } %>"></span>
			                        <span class="fa fa-star <% if (attraction.rating > 3.5) { %> checked <% } %>"></span>
			                        <span class="fa fa-star <% if (attraction.rating > 4.5) { %> checked <% } %>"></span>
	                    		<% } %>
			                    <div class="likes-icon">
			                        <span class="badge badge-primary"><i class="fas fa-thumbs-up"></i> <%= attraction.likes.length %></span>
			                    </div>
	                    		<a href="/attractions/<%= attraction._id %>" class="btn btn-outline-primary">More Info</a>
	                		</div>
			            </div>
			        </div>
				<% }); %>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>