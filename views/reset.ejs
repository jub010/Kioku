<% include ./partials/header %>
<div class="row">
	<div class="col-md-12">
		<form class="form-signin" action="/reset/<%= token %>" method="POST">
			<h1 class="h3 mb-3 font-weight-normal">Reset Password</h1>
			<div class="form-group">
				<label>New Password</label>
		    	<input type="password" class="form-control" name="password" placeholder="New password" required autofocus>
			</div>
			<div class="form-group">
		    	<label>Confirm Password</label>
		    	<input type="password" class="form-control" name="confirm" placeholder="Confirm password" required>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-lg btn-primary btn-block form-control" value="Update password">
			</div>
		</form>
	</div>
</div>
<% include ./partials/footer %>