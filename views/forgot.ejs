<% include ./partials/header %>
<div class="row">
	<div class="col-md-12">
		<form class="form-signin" action="/forgot" method="POST">
			<h1 class="h3 mb-3 font-weight-normal">Forget password</h1>
			<div class="form-group">
				<label>Email</label>
				<input type="email" name="email" class="form-control" placeholder="Email" autofocus>
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-lg btn-primary btn-block form-control" value="Send password reset email">
			</div>
			<a href="/attractions">Go Back</a>
		</form>
	</div>
</div>
